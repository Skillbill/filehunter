            <name>Francesco Ciacca</name>
            <email>francesco@skillbill.it</email>
            <organization>Skillbill srl</organization>
            <organizationUrl>http://www.skillbill.it/</organizationUrl>
        </developer>
    </developers>
    <scm>
        <connection>scm:git:git://github.com:Skillbill/filehunter.git</connection>
        <developerConnection>scm:git:ssh://github.com:Skillbill/filehunter.git</developerConnection>
        <url>https://github.com/Skillbill/filehunter</url>
    </scm>
