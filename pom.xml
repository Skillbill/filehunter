    <modelVersion>4.0.0</modelVersion>
    <groupId>net.skillbill</groupId>
    <artifactId>filehunter</artifactId>
    <version>1.0.0</version>
    <name>${project.groupId}:${project.artifactId}</name>
    <description>Aa java utility library aimed to seamlessly and safely process files from any location whether local or remote It allows to pickup files to any URL-able location, like file://.., ftp://.. and so on. .</description>
    <url>https://github.com/Skillbill/filehunter</url>
    <packaging>jar</packaging>
    <licenses>
        <license>
            <name>GNU Lesser General Public License v2.1</name>
            <url>https://github.com/Skillbill/filehunter/blob/master/LICENSE</url>
        </license>
    </licenses>
    <developers>
